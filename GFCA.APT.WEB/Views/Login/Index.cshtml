@{
    var sys = (GFCA.APT.Domain.Dto.InfomationSystem)ViewBag.InfomationSystem;
}
@model GFCA.APT.WEB.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutAllowed.cshtml";
}

@section styles {
    <style>
        body {
            background-image: url("@Url.Content("~/Content/images/bg-allowed-01.jpg")");
            background-size:cover;
        }
        .login-box {
            opacity: 0.8;
        }
    </style>
}
<div class="login-box">
    <div class="login-logo">
        <b>Asiatic</b>&nbsp;APT
    </div>
    <!-- /.login-logo -->
    <div class="card">
        <div class="card-body login-card-body">
            <p class="login-box-msg">Sign in to start your session</p>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="input-group mb-3">
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", placeholder = "username or e-mail" } })
                    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "password" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-8">
                        <div class="icheck-primary">
                            <div class="checkbox">
                                @Html.EditorFor(model => model.RememberMe)
                                @Html.ValidationMessageFor(m => m.RememberMe, "", new { @class = "text-danger" })
                                @Html.LabelFor(model => model.RememberMe, "Remember me", new { @class = "control-label" })
                            </div>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                    </div>
                    <!-- /.col -->
                </div>

            }

            @if (sys.Environment.ToLower() == "dev")
            {
                <div class="ribbon-wrapper">
                    <div class="ribbon bg-warning font-weight-light text-sm">
                        Dev
                    </div>
                </div>
            }
            else if (sys.Environment.ToLower() == "uat")
            {
                <div class="ribbon-wrapper">
                    <div class="ribbon bg-warning font-weight-light text-sm">
                        UAT
                    </div>
                </div>
            }
            else if (sys.Environment.ToLower() == "staging")
            {
                <div class="ribbon-wrapper">
                    <div class="ribbon bg-warning font-weight-light text-sm">
                        STAGE
                    </div>
                </div>
            }
        </div>
        <!-- /.login-card-body -->
        <div class="card-footer">

            <div class="float-right d-none d-sm-inline-block" style="font-size:0.85em;">
                <span style="color: #777; font-weight:700;">System</span>&nbsp; @sys.SystemVersion
                &nbsp;
                <span style="color: #777; font-weight:700;">Database</span>&nbsp; @sys.DatabaseVersion
            </div>
        </div>
    </div>
</div>

