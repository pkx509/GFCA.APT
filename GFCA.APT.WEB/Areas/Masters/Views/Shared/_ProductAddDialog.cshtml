@model GFCA.APT.WEB.Areas.Masters.Data.ProductViewModel
@using Syncfusion.EJ2

<div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                @Html.TextBox("ProductId", "0", new { disabled = true })
                <span class="e-float-line"></span>
                @Html.Label("ProductId", "ProductId ID", new { @class = "e-float-text e-label-top" })
            </div>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                @Html.TextBox("ProductCode", string.Empty)
                <span class="e-float-line"></span>
                @Html.Label("ProductCode", "Product Code", new { @class = "e-float-text e-label-top" })
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                @Html.TextBox("ProductName", string.Empty)
                <span class="e-float-line"></span>
                @Html.Label("ProductName", "Product Name", new { @class = "e-float-text e-label-top" })
            </div>
        </div>
    </div>

</div>

@Html.EJS().ScriptManager()
