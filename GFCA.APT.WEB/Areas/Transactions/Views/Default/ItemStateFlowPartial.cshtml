@using GFCA.APT.Domain.Enums
@using GFCA.APT.Domain.Dto
@using Syncfusion.EJ2
@{
    DocumentStateFlowDto dto = ViewData["DocumentStateFlowDto"] as DocumentStateFlowDto;
}
<div class="row mb-2">
    <div class="col col-lg-12 p-1">
        <div class="card card-info card-outline">
            <div class="card-body">

                <div>

                    <div data-alerts="alerts"
                         data-titles='{"warning": "<em>Warning!</em>", "error": "<em>Error!</em>"}'
                         data-ids="myid"
                         data-fade="4000"
                         data-usebullets="true"></div>

                    <div class="row justify-content-center">
                        <div class="col col-sm-12 col-lg-12">

                            <div class="row">

                                <div class="col col-sm-12 col-md-6 col-lg-3">
                                    <div class="form-group row">

                                        <label class="col col-lg-4 control-label text-right">
                                            Company
                                        </label>
                                        <div class="col col-lg-8">
                                            @if (dto != null) 
                                            {
                                                @(Html.EJS().TextBox("txt-company")
                                                .Value(dto.COMP_NAME)
                                                .Placeholder("Company name")
                                                .CssClass("mandatory")
                                                .Render())
                                            }
                                        </div>

                                    </div>
                                </div>

                                <div class="col col-sm-12 col-md-6 col-lg-3">
                                    <div class="form-group row">

                                        <label class="col col-lg-4 control-label text-right">
                                            Document No
                                        </label>
                                        <div class="col col-lg-8">
                                            @if (dto != null)
                                            {
                                                @(Html.EJS().TextBox("txt-document-no")
                                                .Value(dto.DOC_CODE)
                                                .Placeholder("[Auto generate]")
                                                .Render())
                                            }
                                        </div>

                                    </div>
                                </div>

                                <div class="col col-sm-12 col-md-6 col-lg-3">
                                    <div class="form-group row">

                                        <label class="col col-lg-4 control-label text-right">
                                            Version
                                        </label>
                                        <div class="col col-lg-8">
                                            @if (dto != null)
                                            {
                                                @(Html.EJS().TextBox("txt-version")
                                                .Value(dto.DOC_VER.ToString())
                                                .Render())
                                            }
                                        </div>
                                    </div>
                                </div>

                                <div class="col col-sm-12 col-md-6 col-lg-3">
                                    <div class="form-group row">

                                        <label class="col col-lg-4 control-label text-right">
                                            Status
                                        </label>
                                        <div class="col col-lg-8">
                                            @if (dto != null)
                                            {
                                                @(Html.EJS().TextBox("txt-status")
                                                    .Value(dto.DOC_STATUS.ToString())
                                                    .Render())
                                            }
                                        </div>

                                    </div>
                                </div>

                            </div>

                        </div>

                    </div>


                </div>

            </div>

        </div>
    </div>
</div>
